#!/bin/bash

# Update system
echo "Updating system"
sudo apt-get update
sudo apt-get upgrade
sudo apt-get dist-upgrade
echo ""

# Move config directories
echo "Moving Config Directories"
#cp -r .config/ $HOME
cp -r .fonts/ $HOME
cp .bashrc $HOME
cp .vimrc $HOME
cp .Xdefaults $HOME
cp .profile $HOME
echo ""

# Install required programs
echo "Install Curl"
sudo apt-get install curl
echo ""

# Install additional programs
echo "Installing Vim"
sudo apt-get install vim
echo ""

echo "Installing Vim pluging Manager"
curl -fLo ~/.vim/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
echo ""

echo "Installing i3"
sudo apt-get install i3
echo ""

echo "Installing i3blocks"
sudo apt-get install i3blocks
echo ""

echo "Installing Compton"
sudo apt-get install compton
echo ""

echo "Installing Feh"
sudo apt-get install feh
echo ""

echo "Installing urxvt 256"
sudo apt-get install rxvt-unicode-256color
echo ""

echo "Installing Ranger"
sudo apt-get install ranger
echo ""

echo "Installing Cmus"
sudo apt-get install cmus
echo ""

echo "Installing Zathura"
sudo apt-get install zathura zathura-djvu zathura-pdf-poppler
echo ""

echo "Installing Vlc"
sudo apt-get install vlc
echo ""

echo "Installing Git"
sudo apt-get install git
echo ""

echo "Installing Tldr"
sudo apt-get install tldr
echo ""

echo "Installing Neofetch"
sudo apt-get install neofetch
echo ""

echo "Installing Cowsay"
sudo apt-get install cowsay
echo ""

echo "Installing Xinput"
sudo apt-get install xinput
echo ""

echo "Installing Autocutsel"
sudo apt-get install autocutsel
echo ""

echo "Installing Qbittorrent"
sudo apt-get install qbittorrent
echo ""

echo "Installing TexLive"
sudo apt-get install texlive-full
echo ""

echo "Congratulations! Your GNU/Linux configuration is all done!" | cowsay -f tux


